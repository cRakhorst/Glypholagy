# Zet URL rewriting aan
RewriteEngine On

# Route voor API endpoints
RewriteRule ^api/register$ api/register.php [L]
RewriteRule ^api/login$ api/login.php [L]
RewriteRule ^api/save_glyph$ api/save_glyph.php [L]

# Sta toegang toe tot bestaande bestanden en mappen
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Stuur alles anders door naar index.php
RewriteRule ^ index.php [QSA,L]